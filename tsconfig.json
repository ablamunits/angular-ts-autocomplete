{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "preserveConstEnums": true,
        "sourceMap": true,
        "types": [
            "angular",
            "angular-mocks",
            "jasmine"
        ]
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ],
    "files": [
        "src/app.ts",
        "src/pages/main.ctrl.ts",
        "src/test-utils/base-driver.ts"
    ],
    "filesGlob": [
        "src/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
